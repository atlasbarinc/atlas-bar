{{ 'component-hero.css' | asset_url | stylesheet_tag }}

{% render 'component-hero' %}

<script src="{{ 'component-hero.js' | asset_url }}"></script>

{% schema %}
  {
    "name": "Hero",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "label": "Image Background Color",
        "default": "#5aaad6"
      },
      {
        "type": "color",
        "id": "alternate_color",
        "label": "Alternate Font Color",
        "default": "#0d3355"
      },
      {
        "type": "url",
        "id": "secondary_link",
        "label": "Secondary Button Link",
        "info": "Link used for the secondary offer button."
      },
      {
        "type": "text",
        "id": "secondary_text",
        "label": "Secondary Button Text",
        "info": "Text used for the secondary offer button."
      }
    ],
    "blocks": [
      {
        "type": "list_item",
        "name": "List Item",
        "settings": [
          {
            "id": "title",
            "type": "text",
            "label": "Text"
          },
          {
            "id": "icon",
            "type": "image_picker",
            "label": "Icon",
            "info": "60x60 transparent PNG"
          }
        ]
      }
    ]
  }
{% endschema %}