{{ 'component-split-content.css' | asset_url | stylesheet_tag }}

{% render 'component-split-content', type: 'bundle' %}

{% schema %}
  {
    "name": "Split Content",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading"
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Description"
      },
      {
        "type": "text",
        "id": "cta_text",
        "label": "Button Text"
      },
      {
        "type": "checkbox",
        "id": "cta_arrow",
        "label": "Show Button Arrow?",
        "default": true
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image",
        "info": "1000px width"
      },
      {
        "type": "checkbox",
        "id": "image_cutoff",
        "label": "Have Image Cutoff by Border",
        "default": false
      },
      {
        "type": "color",
        "id": "background",
        "label": "Background Color",
        "info": "Choose color that works with white text",
        "default": "#5aaad6"
      }
    ]
  }
{% endschema %}