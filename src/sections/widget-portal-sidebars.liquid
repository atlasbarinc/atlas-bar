<script>
  var sidebars = {};

  sidebars = {{ section.settings | json }};

  {% for block in section.blocks %}
    sidebars['{{ block.type }}'] = sidebars['{{ block.type }}'] || [];
    sidebars['{{ block.type }}'].push({{ block.settings | json }});
  {% endfor %}

  var products_collection = []
  {% paginate collections[section.settings.products_collection].products by 250 %}
    {% for product in collections[section.settings.products_collection].products %}
      products_collection.push({{ product.id }});
    {% endfor %}
  {% endpaginate %}

  var flavors_collection = []
  {% paginate collections[section.settings.flavors_collection].products by 250 %}
    {% for product in collections[section.settings.flavors_collection].products %}
      flavors_collection.push({{ product.id }});
    {% endfor %}
  {% endpaginate %}

  sidebars.products_collection = products_collection;
  sidebars.flavors_collection = flavors_collection;

  window.Scoutside.portal.sidebars = sidebars;
</script>

